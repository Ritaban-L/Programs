#include<stdio.h>
#include<conio.h>
#include<math.h>
void main ()
{
int r,i=0,p=0;
long int n;
printf("Enter a binary code : \n");
scanf("%d",&n);
while(n>0)
      {
 	    r=n%10;
          if(r*2>0)
            p+=pow(r*2,i);
           n/=10;
           i++;     
      }
 printf(" \n The decimal form of the given binary code is : %d ",p);
 getch();
}
